{
  "name": "root",
  "private": true,
  "workspaces": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "devDependencies": {
    "lerna": "^5.1.8",
    "nx": "^14.4.2"
  },
  "scripts": {
    "pm": "lerna run pm --scope=@kennys_wang/pm-cli --",
    "dev:cli": "lerna run dev --scope=@kennys_wang/pm-cli",
    "build": "lerna run build",
    "build:cli": "lerna run build --scope=@kennys_wang/pm-cli",
    "build:core": "lerna run build --scope=@kennys_wang/pm-core",
    "build:node": "lerna run build --scope=@kennys_wang/pm-node-service"
  }
}
